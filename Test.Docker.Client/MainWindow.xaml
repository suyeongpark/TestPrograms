<Window x:Class="Test.Docker.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test.Docker.Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="gridFileList" Grid.Row="0" Margin="3">
        </DataGrid>
        
        <Button Grid.Row="1" Width="120" HorizontalAlignment="Right" Margin="0,3,140,3" Click="BtnAddFile_Click">Add File</Button>
        <Button Grid.Row="1" Width="120" HorizontalAlignment="Right" Margin="0,3,3,3" Click="BtnGetFileInfo_Click">Get Files</Button>

    </Grid>
</Window>
